extends ./layout/normal
block normal
    

    .container
        //one newest post
        .jumbotron.p-4.p-md-5.text-white.rounded.bg-dark
            .col-md-6.px-0
                h1.display-4.font-italic= oneNewestPost.name
                p.lead.my-3= oneNewestPost.description
                p.lead.mb-0
                    a.text-white.font-weight-bold(href="/" + oneNewestPost._id) Continue reading...
        .row.mb-2
                .col-md-6
                    .row.no-gutters.border.rounded.overflow-hidden.flex-md-row.mb-4.shadow-sm.h-md-250.position-relative
                        .col.p-4.d-flex.flex-column.position-static
                            //strong.d-inline-block.mb-2.text-primary World
                            h3.mb-0= twoNewestPost1.name
                            .mb-1.text-muted Nov 12 
                            p.card-text.mb-auto= post1Des
                            a.stretched-link(href="/" + twoNewestPost1._id) 
                        .col-auto.d-none.d-lg-block
                            img.h-100.w-auto.img-responsive.img-box.img-thumbnail.img-fluid(src="/" + twoNewestPost1.image)
                .col-md-6
                    .row.no-gutters.border.rounded.overflow-hidden.flex-md-row.mb-4.shadow-sm.h-md-250.position-relative
                        .col.p-4.d-flex.flex-column.position-static
                            //strong.d-inline-block.mb-2.text-primary World
                            h3.mb-0= twoNewestPost2.name
                            .mb-1.text-muted Nov 12
                            p.card-text.mb-auto= post2Des
                            a.stretched-link(href="/" + twoNewestPost2._id) 
                        .col-auto.d-none.d-lg-block
                            img.h-100.w-auto.img-responsive.img-box.img-thumbnail.img-fluid(src="/" + twoNewestPost2.image)
                
                //main:
        .row
            .col-md-9
                h3.pb-4.mb-4.font-italic.border-bottom You Are My Love 
                .container.py-3
                    each post in posts
                        .jumbotron.p-4.p-md-5.rounded
                            .row
                                .col-md-4
                                    img.w-auto.img-responsive.img-box.img-thumbnail.img-fluid(src="/" + post.image)
                                .col-md-8.px-3
                                    .card-block.px-3.pt-4
                                        h4.card-title.font-italic= post.name 
                                        p.card-text.font-italic.font-weight-light= post.author  
                                        p.card-text.font-weight-light= post.description
                                        a.btn.btn-info(href="/" + post._id) Read More
                nav(aria-label="...")
                    if pages > 0
                        ul.pagination.justify-content-center
                            //trang dau
                            if currentPage == 1
                                li.page-item.disabled
                                    a(aria-disabled="true").page-link First
                            else
                                li.page-item
                                    a.page-link(href="/?page=1") First
                            - var i = (Number(currentPage) > 3 ? Number(currentPage) - 1 : 1)
                            if (i !== 1)
                                //li.page-item.disabled
                                    //a(aria-disabled="true").page-link ...
                            - for (; i <= (Number(currentPage) + 1) && i <= pages; i++) 
                                if (i == currentPage)
                                    li.active
                                        a.page-link= i
                                else
                                    li.page-item
                                        a.page-link(href="/?page=" + i)= i 
                                if (i == Number(currentPage) + 1 && i < pages)
                                    //li.page-item.disabled
                                        //a(aria-disabled="true").page-link ...
                            //trang cuoi			
                            if (currentPage == pages)
                                li.page-item.disabled
                                        a(aria-disabled="true").page-link Last
                            else 
                                li
                                    a.page-link(href="/?page="+ pages) Last
            .col-md-3
                .p-4.mb-3.bg-light.rounded
                    h4.font-italic About
                    p.mb-0
                        | Do you know? 
                        | This's my practice to learning nodeJS using Express, mongoDB.
    






